<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Bubbler+One|Indie+Flower|Poiret+One|Raleway:300,400,500,600,700|Roboto+Mono:300,400" rel="stylesheet">
    <title>Chat io</title>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col s6 center-block">
            <div class="card-panel">
                <form action="/register" method="post" class="center registerForm hiddenSignup">
                    <div class="row">
                        <div class="input-field col s6 center-block">
                            <input type="text" name="username" class="validate">
                            <label for="username">Username</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6 center-block">
                            <input type="password" name="password" class="validate">
                            <label for="password">Password</label>
                        </div>
                    </div>
                    <button type="submit" class="btn waves-effect waves-light #880e4f pink darken-4" name="action">Sign Up
                        <i class="material-icons right">send</i>
                    </button>
                    <p>Déjà inscrit ? <a href="#" class="loginBtn">Connecte toi</a></p>
                    <% if (errors !== null && showRegisterForm !== null && showRegisterForm === true) { %>
                        <% errors.forEach(function(err){ %>
                            <p class="message error"><%= err %></p>
                        <% }); %>
                    <% } %>
                </form> <!-- End Of RegisterForm -->
                <form action="/login" method="post" class="center loginForm hiddenLogin">
                    <div class="row">
                        <div class="input-field col s6 center-block">
                            <input type="text" name="username" class="validate">
                            <label for="username">Username</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6 center-block">
                            <input type="password" name="password" class="validate">
                            <label for="password">Password</label>
                        </div>
                    </div>
                    <button type="submit" class="btn waves-effect waves-light #880e4f pink darken-4" name="action">Log In
                        <i class="material-icons right">send</i>
                    </button>
                    <p>Pas encore inscrit ? <a href="#" class="signupBtn"> Inscris toi</a></p>
                    <% if (errors !== null && showRegisterForm === null) { %>
                        <% errors.forEach(function(err) { %>
                            <p class="error"><%= err %></p>
                        <% }); %>
                    <% } if (success !== null && showRegisterForm === null) { %>
                        <p class="success"><%= success %></p>
                    <% } %>
                </form> <!-- End Of LoginForm -->
            </div>
        </div>
    </div>
</div>
<footer id="footer">
    <div class="container">
        <span class="copyright">&copy; T&G - 2017 | By LilSaint</span>
    </div>
</footer>
<script src="js/jquery-3.2.1.min.js"></script>
<!--< % if (showRegisterForm !== null && showRegisterForm === true % >-->
<!--<script src="/socket.io/socket.io.js"></script>-->
<script src="js/app.js"></script>
<script src="js/materialize.min.js"></script>
</body>
</html>


